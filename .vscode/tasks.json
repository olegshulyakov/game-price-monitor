{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install dependencies",
            "type": "npm",
            "script": "install",
            "problemMatcher": [],
            "group": "none"
        },
        {
            "label": "Format code",
            "type": "npm",
            "script": "prettier",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Start server",
            "type": "npm",
            "script": "start",
            "problemMatcher": [],
            "group": "none"
        },
        {
            "label": "Run tests",
            "type": "npm",
            "script": "test",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build production",
            "type": "npm",
            "script": "build",
            "problemMatcher": ["$eslint-stylish", "$tsc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
